{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "useDefineForClassFields": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,

    "ignoreDeprecations": "6.0",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
